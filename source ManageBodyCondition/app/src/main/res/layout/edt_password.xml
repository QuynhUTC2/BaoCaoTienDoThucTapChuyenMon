<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="15dp"
    android:alpha="0.9">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="200dp"
            android:src="@drawable/ic_baseline_fitness_center_24" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="80dp"
            android:src="@drawable/ic_baseline_fastfood_24" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="120dp"
            android:src="@drawable/healthy" />
    </FrameLayout>
    <TextView
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:text="Đổi mật khẩu"
        android:textSize="35dp"
        android:layout_gravity="center"
        android:textColor="@color/white"
        style="@style/TextAppearance.AppCompat.Large.Inverse"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên đăng nhập:"
        android:textSize="20dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/txt_userNameedtpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your account"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        android:maxLength="50"
        app:counterMaxLength="50"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu:"
        android:textSize="20dp"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/edt_passedit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mật khẩu của bạn"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:inputType="textPassword"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khảu lần 2:"
        android:textSize="20dp"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/edt_passeditAgain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập lại mật khẩu "
        android:textColorHint="@color/white"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:inputType="textPassword"/>

    <Button
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:id="@+id/btn_change"
        android:text="Xong"
        android:textSize="20dp"
        android:backgroundTint="#F0F3F6"
        android:textColor="@color/background"
        android:layout_width="200dp"
        android:layout_height="60dp"/>


</LinearLayout>