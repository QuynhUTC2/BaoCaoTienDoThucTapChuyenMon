<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F80D44"
    android:orientation="vertical"
    android:padding="15dp"
    android:alpha="0.9">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="200dp"
            android:src="@drawable/ic_baseline_fitness_center_24" />
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="80dp"
            android:src="@drawable/ic_baseline_fastfood_24" />
        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="120dp"
            android:src="@drawable/healthy" />
    </FrameLayout>
    <TextView
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:text="Đăng nhập "
        android:textSize="50dp"
        android:layout_gravity="center"
        style="@style/TextAppearance.AppCompat.Large.Inverse"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên tài khoảng:"
        android:textSize="20dp"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/edt_usernameLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên tài khoảng "
        android:textColorHint="@color/white"
        android:maxLength="50"
        app:counterMaxLength="50"
        android:textSize="25dp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu:"
        android:textSize="20dp"
        android:textColor="@color/white"/>
    <EditText
        android:id="@+id/edt_passwordLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mật khẩu"
        android:textColorHint="@color/white"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:inputType="textPassword"/>

    <Button
        android:id="@+id/btn_signIn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:backgroundTint="#F0F3F6"
        android:text="Xong"
        android:textColor="#F80D44"
        android:textSize="20dp" />




</LinearLayout>