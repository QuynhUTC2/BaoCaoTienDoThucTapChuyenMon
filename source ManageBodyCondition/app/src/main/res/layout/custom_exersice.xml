<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="135dp"
        android:background="@drawable/custom_layout_showinfo">
        <ImageView
            android:layout_marginLeft="5dp"
            android:id="@+id/img_exersice"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:src="@drawable/breakfast"/>

        <LinearLayout
            android:layout_width="216dp"
            android:layout_height="130dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_dayex"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:text="Day 1"
                    android:gravity="center"
                    android:textColor="@color/background"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="110dp"
                    android:layout_height="25dp"
                    android:text="Bài tập:"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="45dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_exercise"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:autoSizeTextType="uniform"
                    android:text="blablabla"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
                <TextView
                    android:id="@+id/txt_time"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="15 phút "
                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <CheckBox
                    android:id="@+id/ckb_checkfood"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="10dp" />
                <Button
                    android:id="@+id/btn_watchvideo"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:text="xem clip hướng dẫn"
                    android:textSize="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/background"
                    android:backgroundTint="@color/white"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>