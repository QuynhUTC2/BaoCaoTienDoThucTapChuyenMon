<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcomecut"
    android:padding="15dp"
    android:alpha="0.9">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        style="@style/TextAppearance.AppCompat.SearchResult.Title"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:padding="10dp"
        android:text="Your information"
        android:textSize="40dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/edt_userName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your username"
        android:textColorHint="@color/black"
        android:textSize="23dp"
        android:maxLength="50"
        app:counterMaxLength="50"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sex:"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/edt_Sex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your sex"
        android:textColorHint="@color/black"
        android:textSize="25dp"
        android:maxLength="50"
        app:counterMaxLength="50"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height:"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/edt_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your height"
        android:textColorHint="@color/black"
        android:textSize="23dp"
        android:maxLength="50"
        app:counterMaxLength="50"
        android:textColor="@color/black" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Weight:"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/edt_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your weight"
        android:textColorHint="@color/black"
        android:textSize="23dp"
        android:maxLength="50"
        app:counterMaxLength="50"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chest:"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/edt_chest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your chest"
        android:textColorHint="@color/black"
        android:textSize="25dp"
        android:maxLength="50"
        app:counterMaxLength="50"
        android:textColor="@color/black"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waist:"
        android:textSize="20dp"
        android:textColor="@color/black"/>

    <EditText
        android:id="@+id/edt_waist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your Waist"
        android:maxLength="50"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="25dp"
        app:counterMaxLength="50" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hips:"
        android:textSize="20dp"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/edt_hips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your hips"
        android:textColorHint="@color/black"
        android:textSize="25dp"
        android:maxLength="50"
        app:counterMaxLength="50"
        android:textColor="@color/black"/>
    <Button
        android:layout_gravity="end"
        android:id="@+id/btn_nextInFo"
        android:text="next"
        android:textSize="20dp"
        android:backgroundTint="#F0F3F6"
        android:textColor="#03A9F4"
        android:layout_width="150dp"
        android:layout_height="60dp"/>
</LinearLayout>


</ScrollView>