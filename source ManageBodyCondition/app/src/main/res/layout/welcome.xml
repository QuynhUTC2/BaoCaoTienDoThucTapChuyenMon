<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcomecut"
    android:alpha="0.9"
    android:paddingTop="200dp">

    <TextView
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chào mừng bạn đến với ứng dụng sức khỏe. Hi vọng bạn sẽ có những trải nghiệm thú vị và lành mạnh khi sử dụng ứng dụng"
        android:textSize="34dp"
        android:textColor="@color/white"
        style="@style/TextAppearance.AppCompat.Large.Inverse"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn_signUpW"
            android:layout_margin="10dp"
            android:text="Đăng ký"
            android:textSize="20dp"
            android:backgroundTint="#F0F3F6"
            android:textColor="#F80D44"
            android:layout_width="170dp"
            android:layout_height="60dp"/>
        <Button
            android:id="@+id/btn_signInW"
            android:layout_margin="10dp"
            android:text="Đăng nhập"
            android:textSize="20dp"
            android:backgroundTint="#F0F3F6"
            android:textColor="#F80D44"
            android:layout_width="170dp"
            android:layout_height="60dp"/>


    </LinearLayout>


</LinearLayout>