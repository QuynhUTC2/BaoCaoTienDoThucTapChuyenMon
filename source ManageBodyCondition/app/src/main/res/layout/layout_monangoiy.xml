<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/background">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_fastfood_24"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:text="Món ăn gợi ý cho bạn"
            android:textSize="30dp"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_brightness_1_24"/>
        <TextView
            android:id="@+id/txt_mon1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="Bò né kèm sữa tươi"
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_brightness_1_24"/>
        <TextView
            android:id="@+id/txt_mon4"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="Beefsteak kèm sữa tươi "
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_brightness_1_24"/>
        <TextView
            android:id="@+id/txt_mon2"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="Bò hun khói măng tây "
            android:textSize="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_baseline_brightness_1_24"/>
        <TextView
            android:id="@+id/txt_mon3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:text="Canh bò hầm"
            android:textSize="20dp"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_quitgoiy"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginTop="290dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="end"
        android:backgroundTint="@color/background"
        android:text="quit" />


</LinearLayout>